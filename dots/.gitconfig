[user]
	name = David Brownman
	email = beamneocube@gmail.com
	username = Xavdidtheshadow
[core]
	excludesfile = ~/.gitignore_global
	editor = subl -n -w
[merge]
	tool = vimdiff
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = white
	local = white
	remote = green

[color "diff"]
	meta = magenta reverse
	frag = magenta
	old = red
	new = green

[alias]

	# Aliases
	unadd = reset HEAD
	tree = log --graph --oneline --decorate
	all = commit -A
	standup = log ––since yesterday ––author David

	# Shorthands
	l = log --graph --oneline --decorate  # alias of tree above

	# typos
	psuh = push
	
[credential]
	helper = osxkeychain
[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
